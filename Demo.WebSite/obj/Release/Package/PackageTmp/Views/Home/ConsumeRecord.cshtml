@model List<Demo.Site.Models.ConsumeRecordModel>
@{
    ViewBag.Title = "消费记录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head
{
    <script src="../../Scripts/js/ConsumeCord.js"></script>
    <script src="../../Content/admin/js/Chart.js"></script>
   
}
<a class="btn btn-default btn-round" href="#myModal1" data-toggle="modal"><i class="icon-adn"></i>新增记录</a><br/><br/>
<table id="demo1" class="table table-striped table-hover" >
    @Html.Partial("_ConsumeRecord", Model)
</table>
<canvas id="line" style="width: 900px;height: 400px;"></canvas>
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">新增消费记录</h4>
            </div>
            <div class="modal-body">
                <table style="border: 0px;">
                    <tbody>
                        <tr>
                            <td>消费类型：</td>
                            <td>
                                <select id="consumeType">
                                    <option>其他</option>
                                    <option>买菜</option>
                                    <option>买酒</option>
                                    <option>下酒菜</option>
                                    <option>买米</option>
                                    <option>买油</option>
                                    <option>买调料</option>
                                    <option>买鸡蛋</option>
                                    <option>买面</option>
                                    <option>买肉</option>
                                </select></td>
                        </tr>
                        <tr>
                            <td>消费金额：</td>
                            <td>
                                <input type="text" id="money" placeholder="请输入消费金额"  validate-rules="[['required','请输入$'],['length',{min:6,max:16},'$1长度不能$2$3个字符'],['pattern',/^[0-9]+$/ig,'$只能数字']]"/></td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">关闭</button>
                <button data-dismiss="modal" class="btn btn-warning" type="button" onclick="ConsumeCord.SubmitAdd()">确定</button>
            </div>
        </div>
    </div>
</div>
 <script src="../../Content/admin/js/all-chartjs.js"></script>